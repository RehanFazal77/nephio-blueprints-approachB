apiVersion: kpt.dev/v1
kind: Kptfile
metadata:
  name: oai-ran
  annotations:
    config.kubernetes.io/local-config: "true"
    kpt.dev/config-injection: required
info:
  description: |
    OAI gNB monolithic blueprint for BYOH clusters.
    3-interface design: N2 (control), N3 (userplane), RU (fronthaul).
    Pipeline: interface-fn generates IPClaims, nad-fn generates NADs.
  readinessGates:
  - conditionType: config.injection.WorkloadCluster.workload-cluster
pipeline:
  mutators:
    - image: docker.io/nephio/interface-fn:v3.0.0
    - image: docker.io/nephio/nad-fn:v3.0.0
