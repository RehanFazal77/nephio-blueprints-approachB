apiVersion: kpt.dev/v1
kind: Kptfile
metadata:
  name: network-config
  annotations:
    config.kubernetes.io/local-config: "true"
info:
  description: |
    APPROACH B: All-in-one network configuration package.
    Contains NetworkIntents + NADRendererConfig + nad-fn pipeline.
    This bypasses the broken Porch injector mechanism.
    
    Key difference from Approach A:
    - NetworkIntents are EMBEDDED in this package (not separate)
    - nad-fn processes them directly (no injection needed)
    - NADs are generated automatically
  keywords:
    - network-config
    - nad
    - network-intents
    - 5g
    - approach-b

pipeline:
  mutators:
    # Step 1: Apply cluster-specific values via setters
    - image: gcr.io/kpt-fn/apply-setters:v0.2
      configMap:
        control-plane-range: "192.168.10.0/24"
        control-plane-gateway: "192.168.10.1"
        control-plane-vlan: "0"
        user-plane-range: "192.168.20.0/24"
        user-plane-gateway: "192.168.20.1"
        user-plane-vlan: "0"
        interface-name: "eth0"
        mtu: "1500"
        cni-type: "macvlan"
        macvlan-mode: "bridge"
        target-namespace: "openairinterface"
    # Step 2: Run nad-fn to generate NADs from embedded NetworkIntents
    - image: docker.io/nephio/nad-fn:v3.0.0
      configPath: nad-renderer-config.yaml
